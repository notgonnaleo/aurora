@using Backend.Domain.Entities.Orders
@using Backend.Domain.Enums.Orders

@switch (Status.OrderStatusId)
{
    case ((int)OrdersStatusEnums.Open):
        <div class="order-icon bg-primary">
            <i class="ti ti-clock fs-7 text-light"></i>
        </div>
        break;

    case ((int)OrdersStatusEnums.InProgress):
        <div class="order-icon bg-primary">
            <i class="ti ti-clock-play fs-7 text-light"></i>
        </div>
        break;

    case ((int)OrdersStatusEnums.PartiallyDone):
        <div class="order-icon bg-info">
            <i class="ti ti-clock-up fs-7 text-light"></i>
        </div>
        break;

    case ((int)OrdersStatusEnums.Done):
        <div class="order-icon bg-success">
            <i class="ti ti-clock-check fs-7 text-light"></i>
        </div>
        break;

    case ((int)OrdersStatusEnums.Overdue):
        <div class="order-icon bg-warning">
            <i class="ti ti-clock-exclamation fs-7 text-light"></i>
        </div>
        break;

    case ((int)OrdersStatusEnums.Canceled):
        <div class="order-icon bg-danger">
            <i class="ti ti-clock-x fs-7 text-light"></i>
        </div>
        break;
}

@code
{
    [Parameter]
    public OrderStatus Status { get; set; }
}